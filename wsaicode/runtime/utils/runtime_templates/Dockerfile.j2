# ================================================================
# START: Build Runtime Image from Scratch
# ================================================================
# This is used in cases where the base image is something more generic like nikolaik/python-nodejs
# rather than the current WSAI CODE release

{{ setup_base_system() }}

# Install micromamba
RUN mkdir -p /wsaicode/micromamba/bin && \
    /bin/bash -c "PREFIX_LOCATION=/wsaicode/micromamba BIN_FOLDER=/wsaicode/micromamba/bin INIT_YES=no CONDA_FORGE_YES=yes $(curl -L https://micro.mamba.pm/install.sh)" && \
    /wsaicode/micromamba/bin/micromamba config remove channels defaults && \
    {%- if channel_alias %}
    /wsaicode/micromamba/bin/micromamba config set channel_alias '{{ channel_alias }}' && \
    {%- endif %}
    /wsaicode/micromamba/bin/micromamba config list && \
    chown -R wsaicode:wsaicode /wsaicode/micromamba && \
    # Create read-only shared access to micromamba for all users
    # This allows both root and wsaicode users to access the same packages
    # while maintaining security by keeping wsaicode as the owner
    chmod -R 755 /wsaicode/micromamba && \
    # Create a separate writable location for root's micromamba cache/config
    mkdir -p /root/.local/share/micromamba && \
    # Set up environment variables for system-wide access
    echo 'export PATH="/wsaicode/micromamba/bin:$PATH"' >> /etc/environment

# Create the wsaicode virtual environment and install poetry and python
# Run as wsaicode user to avoid expensive chown -R operations later
USER wsaicode
RUN /wsaicode/micromamba/bin/micromamba create -n wsaicode -y && \
    /wsaicode/micromamba/bin/micromamba install -n wsaicode -c conda-forge poetry python=3.12 -y
USER root

# Create a clean wsaicode directory including only the pyproject.toml, poetry.lock and wsaicode/__init__.py
RUN \
    if [ -d /wsaicode/code ]; then rm -rf /wsaicode/code; fi && \
    mkdir -p /wsaicode/code/wsaicode && \
    touch /wsaicode/code/wsaicode/__init__.py && \
    chown -R wsaicode:wsaicode /wsaicode/code && \
    # Set global git configuration to ensure proper author/committer information
    git config --global user.name "wsaicode" && \
    git config --global user.email "wsaicode@wsai-code.dev"

COPY --chown=wsaicode:wsaicode ./code/pyproject.toml ./code/poetry.lock /wsaicode/code/

{{ install_dependencies_user() }}
{{ install_dependencies_root() }}

# ================================================================
# END: Build Runtime Image from Scratch
